			<tr>
				<th>ScorePlayer1</th>
				<td>{{ game.scorePlayer1 }}</td>
			</tr>
			<tr>
				<th>ScorePlayer2</th>
				<td>{{ game.scorePlayer2 }}</td>
			</tr>
			<tr>
				<th>Status</th>
				<td>{{ game.status }}</td>
			</tr>
			{# {% for player in game.player %}
